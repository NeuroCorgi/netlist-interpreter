    main-is:          Test.hs
    hs-source-dirs:   test
    default-language: Haskell2010
    ghc-options:      -Wall
    build-depends:
        base ^>=4.19.0.0,
        tasty,
        tasty-hunit,
        clash-yosys-netlist-sim

test-suite netlist-sim-inttest
    type: exitcode-stdio-1.0
    main-is: Main.hs
    hs-source-dirs: test
    default-language: Haskell2010
    ghc-options: -Wall
    build-depends:
        base ^>=4.19.0.0,
        tasty,
        tasty-hunit,
        clash-yosys-netlist-sim

test-suite netlist-sim-clash-test
    type: exitcode-stdio-1.0
    main-is: Clash.hs
    hs-source-dirs: test
    default-language: Haskell2010
    ghc-options: -Wall
    build-depends:
        base ^>=4.19.0.0,
        tasty,
        tasty-hunit,
